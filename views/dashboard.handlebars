<div class="row" id="newPost">
    <div class="col-md-12">
        <h3>New Post:</h3>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Post title:</label>
                <input class="form-input" type="text" id="post-name" name="post-name" />
            </div>
            <div class="form-group">
                <label for="project-content">Content:</label>
                <textarea class="form-input" id="post-content" name="post-content"></textarea>
            </div>
            <div class="form-group">
                <button type="button" class="postBtn btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    <h3 id="history">
        Your post history:
    </h3>
    <div class="col-md-6 posts">
        {{#each posts as |post|}}
        <div class="yourPosts">
            <div class="name">~{{user.name}} - {{format_time this.createdAt}} {{format_date this.createdAt}}</div>
            <div class="postTitle">
                {{this.title}}
                <button class="postLocate" data-id={{this.id}}>see post</button>
            </div>
            <div class="postContent">
                {{this.post}}
            </div>
        </div>
        <button class="deletePost btn-primary" id="deletePost" data-id={{this.id}}>Delete Post
        </button>
        {{/each}}
    </div>
</div>

<script src="/js/script.js"></script>
<script src="/js/main.js"></script>